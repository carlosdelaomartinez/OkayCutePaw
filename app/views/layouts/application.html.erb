<!DOCTYPE html>
<html>
  <head>
    <title>OkayCutePaw</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
    <script type="text/javascript">
        window.skipURL = "<%= image_url('skip.png') %>";
        window.splashlogoURL = "<%= image_url('splashlogo.png') %>";
        window.mainlogoURL = "<%= image_url('mainlogo.png') %>";
        window.splashDogo3 = "<%= image_url('splashterrier.png') %>";
        window.splashDogo1 = "<%= image_url('splashyork.png') %>";
        window.splashDogo2 = "<%= image_url('splashalasko.png') %>";
        window.splashDogo4 = "<%= image_url('splashpuppies.png') %>";
        window.doubletakeURL = "<%= image_url('pet-house.png') %>";
        window.chatURL = "<%= image_url('chat.png') %>";
        window.petpawURL = "<%= image_url('petpaws.png') %>";
        window.searchpetURL = "<%= image_url('search.png') %>";
        window.liURL = "<%= image_url('LI-Logo.png') %>";
        window.ghURL = "<%= image_url('GitHub_Logo.png') %>";
        window.arrupURL = "<%= image_url('arrow-up.png') %>";
        window.arrdownURL = "<%= image_url('arrow-down.png') %>";
        window.leftarrowURL = "<%= image_url('left-arrow.png') %>";
        window.rightarrowURL = "<%= image_url('right-arrow.png') %>";
        
        window.leftpawURL = "<%= image_url('leftcolorpaw.png') %>";
         window.rightpawURL = "<%= image_url('rightcolorpaw.png') %>";

    </script>
    <% if current_user %>
      <script>
        window.currentUser = {
          'id': <%= current_user.id%>,
          'username': "<%= current_user.username %>",
          'name': "<%= current_user.name %>",
          'photoUrl': "<%= url_for(current_user.photo)%>",
          'lookingFor': "<%= current_user.looking_for%>",
          'distance': "<%= current_user.distance%>",
          'lookingAgeLower': "<%= current_user.looking_age_lower%>",
          'lookingAgeHigher': "<%= current_user.looking_age_higher%>",
          'location': "<%= current_user.location%>"

        }
      </script>
    <%end%>
  <body>

    <%= yield %>
  </body>
</html>
